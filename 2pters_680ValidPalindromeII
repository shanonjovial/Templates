class Solution(object):
    def validPalindrome(self, s):
        """
        :type s: str
        :rtype: bool
        """
        left, right = 0, len(s)-1
        while left < right:
            if s[left] == s[right]:
                left+=1
                right-=1
            else:
                return self.verify(s, left+1, right) or self.verify(s, left, right-1)
        return True
    
    def verify(self, s, left, right):
        while left < right:
            if s[left] == s[right]:
                left+=1
                right-=1
            else:
                return False
        return True
